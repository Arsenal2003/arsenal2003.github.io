<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Login System in Node.js Express</title>
</head>

<body class="bg-light">
    <!-- <h1 class="mt-5 mb-5 text-left text-primary text-white bg-dark"><b>PlayCount</b></h1> -->

    <% if(session.user_id) { %>

        <!-- // <h1 class=" mb-2 text-center  text-white"><b>PlayCount</b></h1> -->
        <nav class="sticky-top navbar navbar-expand-md navbar-dark bg-dark ">


            <span class="navbar-brand m-2 h1"><a class="nav-link text-light" href="/">PlayCount</a></span>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse w-100 order-2 order-md-0 dual-collapse2" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/cupons">Cupons</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/earn">Try and Rate</a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link" href="/outfitbattle">Outfit Battle</a>
                      </li>

            </div>


            <a class="nav-link order-5 " href="/logout"><button class="btn btn-outline-success nav-item"
                    type="button">Logout</button></a>

        </nav>

        <div class="text-center p-5">
            <h1><b>Offers from your shops</b></h1>
        </div>

        <!-- // <p class="bg-light">ceva</p> ceva  -->
        <div class="container">

            
                <!-- <p>ceva </p> -->

            <div class="d-flex flex-row flex-wrap justify-content-evenly ">
                <div class="card  m-5" style="width: 18rem;" >
                    <a href="/earn/adidas"><img src="/images/ADIDAS.jpeg " class="card-img-top" onclick="ceva()"
                            alt="cevadus"></a>
                </div>
                <div class="card m-5 border-danger" style="width: 18rem;">
                    <a href="/earn/c&a"><img src="/images/C&A.jpeg" class="card-img-top" onclick="ceva()"
                            alt="cevadus"></a>
                </div>
                <div class="card m-5 border-danger" style="width: 18rem;">
                    <a href="/earn/h&m"><img src="/images/H&M.jpeg" class="card-img-top" onclick="ceva()"
                            alt="cevadus"></a>
                </div>
                <div class="card m-5 border-danger" style="width: 18rem;">
                    <a href="/earn/nike"><img src="/images/NIKE.jpeg" class="card-img-top" onclick="ceva()"
                            alt="cevadus"></a>
                </div>
                <div class="card m-5 border-danger" style="width: 18rem;">
                    <a href="/earn/zara"><img src="/images/ZARA.jpeg" class="card-img-top" onclick="ceva()"
                            alt="cevadus"></a>
                </div>
                <div class="card m-5 border-danger" style="width: 18rem;">
                    <a href="/earn/p&b"><img src="/images/P&B.jpeg" class="card-img-top" onclick="ceva()"
                            alt="cevadus"></a>
                </div>  

            </div>


                <!-- <button type="button" class="btn btn-dark"></button> -->

                <% } else { %>
                    <div class="container">
                        <div class="card">
                            <div class="card-header">Login</div>
                            <div class="card-body">
                                <form method="post" action="/login">
                                    <div class="mb-3">
                                        <label>Email Address</label>
                                        <input type="email" name="user_email_address" class="form-control" />
                                    </div>
                                    <div class="mb-3">
                                        <label>Password</label>
                                        <input type="password" name="user_password" class="form-control" />
                                    </div>
                                    <div class="mb-3">
                                        <input type="submit" class="btn btn-primary" value="Login" />
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>





           
        </div>
</body>
<% } %>

</html>