<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Login System in Node.js Express</title>
    <script type="text/javascript" src="https://unpkg.com/webcam-easy/dist/webcam-easy.min.js"></script>
</head>

<body class="bg-light">
    <!-- <h1 class="mt-5 mb-5 text-left text-primary text-white bg-dark"><b>PlayCount</b></h1> -->

    <% if(session.user_id) { %>

        <!-- // <h1 class=" mb-2 text-center  text-white"><b>PlayCount</b></h1> -->
        <nav class="sticky-top navbar navbar-expand-md navbar-dark bg-dark ">


            <span class="navbar-brand m-2 h1"><a class="nav-link text-light" href="/">PlayCount</a></span>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse w-100 order-2 order-md-0 dual-collapse2" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/cupons">Cupons</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/earn">Try and Rate</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/outfitbattle">Outfit Battle</a>
                    </li>


            </div>


            <a class="nav-link order-5 " href="/logout"><button class="btn btn-outline-success nav-item"
                    type="button">Logout</button></a>

        </nav>

        <div class="text-center p-5">
            <h1><b>Picks for this collection</b></h1>
        </div>

        <!-- // <p class="bg-light">ceva</p> ceva  -->
        <div class="container">


            <!-- <p>ceva </p> -->

            <div class="d-flex flex-row flex-wrap justify-content-center">


                <div class="card m-5 text-white bg-dark" style="width: 20rem;">
                    <img src="/images/clothes/clothe3.png" class="card-img-top" alt="...">
                    <div class="card-body text-center">
                        <p class="card-text">Ultraboost Shoes</p>
                    </div>
                </div>


                <div class="card m-5 text-white bg-dark" style="width: 20rem;">
                    <img src="/images/clothes/clothe6.png" class="card-img-top" alt="...">
                    <div class="card-body text-center">
                        <p class="card-text">Gym Tights</p>
                    </div>
                </div>
                <div class="card m-5 text-white bg-dark" style="width: 20rem;">
                    <img src="/images/clothes/clothe5.png" class="card-img-top" alt="...">
                    <div class="card-body text-center">
                        <p class="card-text">Track Jacket</p>
                    </div>
                </div>



            </div>


            <div class="col text-center fixed-bottom m-8">
                <video id="webcam" autoplay playsinline width="600" height="400"></video>
                <canvas id="canvas" class="d-none"></canvas>

            </div>
            <div class=" col text-center ">
                <button type="button" class="btn btn-secondary" onclick="pic()">Take Picture</button>
                <script>
                    const webcamElement = document.getElementById('webcam');
                    const canvasElement = document.getElementById('canvas');
                    const webcam = new Webcam(webcamElement, 'user', canvasElement);
                    function pic() {

                        document.getElementById('webcam').hidden = false;
                        webcam.start()
                            .then(result => {
                                console.log("webcam started");
                                let picture = webcam.snap();
                                console.log(picture);
                                webcam.stop();
                                document.getElementById('webcam').hidden = true;


                            })
                            .catch(err => {
                                console.log(err);
                            });

                    }


                </script>
            </div>
            <!-- <button type="button" class="btn btn-dark"></button> -->

            <% } else { %>
                <div class="container">
                    <div class="card">
                        <div class="card-header">Login</div>
                        <div class="card-body">
                            <form method="post" action="/login">
                                <div class="mb-3">
                                    <label>Email Address</label>
                                    <input type="email" name="user_email_address" class="form-control" />
                                </div>
                                <div class="mb-3">
                                    <label>Password</label>
                                    <input type="password" name="user_password" class="form-control" />
                                </div>
                                <div class="mb-3">
                                    <input type="submit" class="btn btn-primary" value="Login" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>






        </div>
</body>
<% } %>

</html>